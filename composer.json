{
  "name": "basbit/fin-transaction-system",
  "description": "test task - financial transactions system",
  "type": "library",
  "license": "MIT",
  "minimum-stability": "stable",
  "require": {
    "php": "^8",
    "moneyphp/money": "^4.0",
    "symfony/uid": "^6.1",
    "broadway/broadway": "^2.4",
    "php-di/php-di": "^6.4",
    "symfony/messenger": "^6.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^9",
    "phpstan/phpstan": "^1.8",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "extra": {
    "phpstan": {
      "includes": [
        "extension.neon"
      ]
    }
  }
}
